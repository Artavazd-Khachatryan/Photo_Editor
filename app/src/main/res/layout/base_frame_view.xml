<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <FrameLayout
            android:id="@+id/fl_for_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toStartOf="@+id/v_line_right"
            app:layout_constraintStart_toEndOf="@+id/v_line_left"
            app:layout_constraintBottom_toTopOf="@+id/v_line_bottom"
            app:layout_constraintTop_toBottomOf="@+id/v_line_top"/>

     <ImageView
             android:id="@+id/btnDelete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@android:drawable/ic_menu_close_clear_cancel"
             app:layout_constraintTop_toTopOf="@+id/v_line_top"
             app:layout_constraintBottom_toBottomOf="@+id/v_line_top"
             app:layout_constraintEnd_toEndOf="@+id/v_line_right"
             app:layout_constraintStart_toStartOf="@+id/v_line_right"/>


    <include
            android:id="@+id/frame"
            layout="@layout/frame_for_base_view"/>





</androidx.constraintlayout.widget.ConstraintLayout>